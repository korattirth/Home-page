        function ForgetBox() {
            $("#forgetDiv").removeClass("d-none");
            $("#logindiv").addClass("d-none")
        }
        $(document).ready(function () {
            $("#lgnBtn").click(function (event) {
                event.preventDefault();
                if ($("#login_email").val() == "") {
                    $("#loginEmailValidation").text("Please Enter Email")
                }
                if ($("#passWord").val() == "") {
                    $("#passWordValidation").text("Please Enter Password")
                }
            })
            $("#closeDetails").click(function () {
                $("#forgetDiv").addClass("d-none")
            })
            $("#FindPassword").click(function () {
                if ($("#forgetEmail").val() != "") {
                    $.ajax({
                        type: "GET",
                        url: "@Url.Action("ForgetPassword")",
                        data: { "Email": $("#forgetEmail").val() },
                        success: function (result) {
                            if (result == true) {
                                $("#successDiv").removeClass("d-none")
                            }
                            else {
                                $("#ErrorDiv").removeClass("d-none")
                            }
                        },
                        error: function () {
                            console.log("Somthing Went Wrong")
                        }
                    })
                }
                else {
                    $("#ErrorDiv").removeClass("d-none")
                }
            })

        })
    </script>
