@{Layout = "~/Views/Shared/_AdminLayout.cshtml";}
@{ ViewData["Title"] = "Service Request";}
@model ServicesHistoryAdminViewModel

<body>
    <section>
        <div class="main_div">
            <div class="sub_div">
                <div class="perent_div">
                    <div class="child1_div">
                        <a asp-controller="Admin" asp-action="UserMangement" style="text-decoration:none">
                            <div class="services">
                                <p class="services_text">User Management</p>
                            </div>
                        </a>
                        <a asp-controller="Admin" asp-action="ServiceRequest" style="text-decoration:none">
                            <div class="services">
                                <p class="services_text" style="color: #1fb6ff;">Services Request</p>
                            </div>
                        </a>
                    </div>
                    <div class="child2_div">
                        <div class="user_management_div">
                            <h2>Services Request</h2>
                            <div>
                                <img src="~/img/vector-smart.png" alt="">
                                <p>Add New User</p>
                            </div>
                        </div>

                        <div>
                            <form asp-action="ServiceRequest" method="post">
                                <div class="row">
                                    <div class="d-flex justify-content-between align-items-center col-2">
                                        <input type="text" placeholder="Services Id" asp-for="SerchHistory.ServicerequestId">
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center col-2">
                                        <input type="text" placeholder="Postal Code" asp-for="SerchHistory.PostalCode">
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center col-2">
                                        <input type="text" placeholder="Email" asp-for="SerchHistory.Email">
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center col-2">
                                        <input type="text" placeholder="Customer" asp-for="SerchHistory.Customer">
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center col-2">
                                        <input type="text" placeholder="Services Provider" asp-for="SerchHistory.ServiceProvider">
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center col-2">
                                        <select asp-for="SerchHistory.Status">
                                            <option value="-1">Select Status</option>
                                            <option value="1">Complete</option>
                                            <option value="2">Cancel</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mt-3 mb-3">
                                    <div class="col-2 mt-2 text-center">
                                        <div>
                                            <label class="m-0">Has issue</label>
                                            <input asp-for="SerchHistory.HasIssue" class="border" style="width:20px" type="checkbox">
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center col-2">
                                        <input type="date" asp-for="SerchHistory.FromDate">
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center col-2">
                                        <input type="date" asp-for="SerchHistory.Todate">
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center col-2">
                                        <button type="submit" class="btn" style="background-color: #1fb6ff">Serch</button>
                                        <button type="button" asp-action="ServiceRequest" class="btn" style="background-color: #dedddd">Clear</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="table_res">
                            <table id="Test">
                                <!-- row-1 -->
                                <thead>
                                    <tr class="row_1">
                                        <th>
                                            <div class="main_row_col">
                                                <p class="text1">Services Id</p>
                                                <img src="~/img/forma-21.png" alt="">
                                            </div>
                                        </th>
                                        <th>
                                            <div class="main_row_col">
                                                <p class="text1">Services Data</p>
                                                <img src="~/img/forma-21.png" alt="">
                                            </div>
                                        </th>
                                        <th>
                                            <div class="main_row_col" style="justify-content: flex-start;">
                                                <p class="text1">Customer Details</p>
                                                <img src="~/img/forma-21.png" alt="">
                                            </div>
                                        </th>
                                        <th>
                                            <div class="main_row_col">
                                                <p class="text1">Services Provider</p>
                                                <img src="~/img/forma-21.png" alt="">
                                            </div>
                                        </th>
                                        <th>
                                            <div class="main_row_col">
                                                <p class="text1">Net Amount</p>
                                                <img src="~/img/forma-21.png" alt="">
                                            </div>
                                        </th>
                                        <th>
                                            <div class="main_row_col">
                                                <p class="text1">Status</p>
                                                <img src="~/img/forma-21.png" alt="">
                                            </div>
                                        </th>
                                        <th>
                                            <div>
                                                <p class="text1">Action</p>
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                                <!-- row-2 -->
                                <tbody>
                                    @foreach (var j in Model.serviceRequestAdmin)
                                    {
                                        <tr class="row_2">
                                            <!-- colum-1 -->
                                            <td class="colum_man">
                                                <div>
                                                    <p class="text2">@j.ServicesRequestId</p>
                                                </div>
                                            </td>
                                            <!-- colum-2 -->
                                            <td class="colum_man">
                                                <div class="main_row_col">
                                                    <img src="~/img/calculator.png" alt="">
                                                    <p class="text1">@j.ServiceStartDate</p>
                                                </div>
                                                <div class="main_row_col" style="margin-top: 7px;">
                                                    <img src="~/img//layer-712.png" alt="">
                                                    <p class="text2">12:00 - 18:00</p>
                                                </div>
                                            </td>
                                            <!-- colum-3 -->
                                            <td class="colum_man">
                                                <div class="for_add">
                                                    <p class="text2">@j.FirstName @j.LastName</p>
                                                </div>
                                                <div class="for_add" style="margin-top: 7px;">
                                                    <img src="~/img//layer-719.png" alt="">
                                                    <p class="text2">@j.HouseNumber @j.StreetName @j.City @j.Postalcode</p>
                                                </div>
                                            </td>
                                            <!-- colum-3 -->
                                            <td class="colum_man">
                                                <div class="main_row_col">
                                                    @if (!String.IsNullOrEmpty(j.ProviderFirstName))
                                                    {
                                                        <div class="col_2 d-flex">
                                                            <div class="hat_img">
                                                                <img src="~/img/forma-24.png" alt="">
                                                            </div>
                                                            <div>
                                                                <p class="text2">@j.ProviderFirstName @j.ProviderLastName</p>
                                                                @{ int i = (int)j.Rating;}
                                                                @for (int k = 0; k < i; k++)
                                                                {
                                                                    <img src="~/img/forma-23.png" alt="">
                                                                }
                                                                @for (int k = 0; k < 5 - i; k++)
                                                                {
                                                                    <img src="~/img/grey-small-star.png" />
                                                                }
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </td>
                                            <td class="colum_man">
                                                <div class="main_row_col">
                                                    <p class="text2">@j.NetAmount $</p>
                                                </div>
                                            </td>
                                            <!-- coulm-5 -->
                                            <td class="colum_man">
                                                @if (j.Status == 0)
                                                {
                                                    <div class="main_row_col">
                                                        <p class="pending_btn" style="background-color:yellow">New</p>
                                                    </div>
                                                }
                                                else if (j.Status == 1)
                                                {
                                                    <div class="main_row_col">
                                                        <p class="pending_btn bg-success">Complete</p>
                                                    </div>
                                                }
                                                else if (j.Status == 2)
                                                {
                                                    <div class="main_row_col">
                                                        <p class="pending_btn bg-danger">Cancel</p>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="main_row_col">
                                                        <p class="pending_btn">Pending</p>
                                                    </div>
                                                }
                                            </td>
                                            <td class="colum_man">
                                                <!-- colum-6 -->
                                                <div class="main_row_col" style="position: relative;">
                                                    <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <i class="fa fa-ellipsis-v" aria-hidden="true" id="status_id2"></i>
                                                    </a>
                                                    <div class="dropdown-menu">
                                                        @if (j.Status == 0 || j.Status == 3)
                                                        {
                                                            <a class="dropdown-item" onclick="Reschedule(@j.ServicesRequestId)">Edit & Reschedule</a>
                                                            <a class="dropdown-item">Cancel SR By Cust</a>
                                                            <a class="dropdown-item">Inquire</a>
                                                            <a class="dropdown-item">History Log</a>
                                                            <a class="dropdown-item">Download Invoice</a>
                                                            <a class="dropdown-item">Other Transactions</a>
                                                        }
                                                        else if (j.Status == 1)
                                                        {
                                                            <a class="dropdown-item">Refund</a>
                                                            <a class="dropdown-item">Inquire</a>
                                                            <a class="dropdown-item">History Log</a>
                                                            <a class="dropdown-item">Has Issue</a>
                                                            <a class="dropdown-item">Other Transactions</a>
                                                        }
                                                        else
                                                        {
                                                            <a class="dropdown-item">Inquire</a>
                                                            <a class="dropdown-item">History Log</a>
                                                            <a class="dropdown-item">Other Transactions</a>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-none" id="reschedule" style="position: absolute;top: 70%;left: 50%;transform: translate(-50%,-50%);background-color: #f5f5f5;">
                <div class="m-3">
                    <div class="alert alert-danger alert-dismissible d-none" id="DangerDivDetails">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Danger!</strong> Please Fill Required Field.
                    </div>
                    <div class="d-flex justify-content-between">
                        <p style="color: #646464;font-size: 20px;font-weight: bold;">Edit Services Request</p>
                        <i class="fa fa-close" onclick="closeReschedule()" style="cursor: pointer;"></i>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div>
                            <label class="lable_text m-0" for="ServicesStartDate">Date</label><br>
                            <input type="date" id="ServicesStartDate">
                        </div>
                        <div>
                            <label class="lable_text m-0" for="">Time</label><br>
                            <input type="time">
                        </div>
                    </div>
                    <p class="lable_text m-0 mt-3" style="font-size: 16px;">Services Address</p>
                    <div class="d-flex justify-content-between">
                        <div>
                            <label class="lable_text m-0" for="Streetname">Street Name</label><br>
                            <input type="text" id="Streetname">
                        </div>
                        <div>
                            <label class="lable_text m-0" for="HouseNumber">House Number</label><br>
                            <input type="text" id="HouseNumber">
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div>
                            <label class="lable_text m-0" for="PostalCode">Postal Code</label><br>
                            <input type="number" id="PostalCode">
                        </div>
                        <div>
                            <label class="lable_text m-0" for="City">City</label><br>
                            <input type="text" id="City">
                        </div>
                    </div>

                    <p class="lable_text m-0 mt-3" style="font-size: 16px;">Invoice Address</p>
                    <div class="d-flex justify-content-between">
                        <div>
                            <label class="lable_text m-0" for="invoiceStreetname">Street Name</label><br>
                            <input type="text" id="invoiceStreetname">
                        </div>
                        <div>
                            <label class="lable_text m-0" for="invoiceHouseNumber">House Number</label><br>
                            <input type="text" id="invoiceHouseNumber">
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div>
                            <label class="lable_text m-0" for="invoicePostalCode">Postal Code</label><br>
                            <input type="number" id="invoicePostalCode">
                        </div>
                        <div>
                            <label class="lable_text m-0" for="invoiceCity">City</label><br>
                            <input type="text" id="invoiceCity">
                        </div>
                    </div>

                    <p class="lable_text m-0 mt-3" style="font-size: 16px;">Why Do You Want To Reschedule This Services?</p>
                    <textarea name="" id="" class="w-100" rows="4" placeholder="Why Do You Want To Reschedule This Services?"></textarea>

                    <p class="lable_text m-0 mt-3" style="font-size: 16px;">Call Center EMp Notes</p>
                    <textarea name="" id="" class="w-100" rows="4" placeholder="Enter Notes"></textarea>

                    <button type="button" id="UpdateBtn" class="btn w-100" style="background-color: #1fb6ff;color: white;" onclick="UpdateSchedule(this.value)">Update</button>

                </div>
            </div>
            <div class="footer_text">
                <p>©2018 Helperland. All rights reserved.</p>
            </div>
        </div>
    </section>

