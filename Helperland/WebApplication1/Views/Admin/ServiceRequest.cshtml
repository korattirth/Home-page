    <script>
        function Reschedule(ServiceRequestId) {
            $("#reschedule").removeClass("d-none");
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetDetails")",
                data: { "ServiceRequestId": ServiceRequestId },
                success: function (result) {
                    $("#ServicesStartDate").val(result.serviceStartDate);
                    $("#Streetname").val(result.streetName);
                    $("#HouseNumber").val(result.houseNumber);
                    $("#City").val(result.city);
                    $("#PostalCode").val(result.postalcode);
                    $("#invoiceStreetname").val(result.streetName);
                    $("#invoiceHouseNumber").val(result.houseNumber);
                    $("#invoiceCity").val(result.city);
                    $("#invoicePostalCode").val(result.postalcode);
                    $("#UpdateBtn").val(ServiceRequestId)
                },
                error: function () {
                    console.log("Something Went Wrong");
                }
            })
        }
        function UpdateSchedule(ServiceRequestId) {
            var ServiceStartDate = $("#ServicesStartDate").val();
            var StreetName = $("#Streetname").val();
            var houseNumber = $("#HouseNumber").val();
            var city = $("#City").val();
            var postalcode = $("#PostalCode").val();
            var invoiceStreetName = $("#invoiceStreetname").val();
            var invoiceHousenumber = $("#invoiceHouseNumber").val();
            var invoiceCity = $("#invoiceCity").val();
            var invoicePostalcode = $("#invoicePostalCode").val();
            if (ServiceStartDate == "" || StreetName == "" || houseNumber == "" || city == "" || postalcode == "" || invoiceHousenumber == "" || invoiceStreetName == "" || invoiceCity == "" || invoicePostalcode == "") {
                $("#DangerDivDetails").removeClass("d-none")
            }
            else {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateSchedule")",
                    data: {
                        "ServiceStartDate": ServiceStartDate,
                        "StreetName": StreetName,
                        "houseNumber": houseNumber,
                        "city": city,
                        "postalcode": postalcode,
                        "invoiceStreetName": invoiceStreetName,
                        "invoiceHousenumber": invoiceHousenumber,
                        "invoiceCity": invoiceCity,
                        "invoicePostalcode": invoicePostalcode,
                        "ServiceRequestId": ServiceRequestId
                    },
                    success: function (result) {
                        location.reload();
                    },
                    error: function () {
                        console.log("Somthing Went Wrong")
                    }
                })
            }
        }
        function closeReschedule() {
            $("#reschedule").addClass("d-none");
        }
        function Serch() {
            var ServicerequestId = $("#SerchById").val();
            $.ajax({
                type: "GET",
                url: "@Url.Action("SerchRequest")",
                data: { "ServicerequestId": ServicerequestId },
                success: function (result) {

                },
                error: function () {

                }
            })
        }
    </script>
