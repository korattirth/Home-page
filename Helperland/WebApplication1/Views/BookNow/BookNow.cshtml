            $("#services_4").click(function () {
                $("#services_4").toggleClass("_border")
                $("#services_4_prices").toggle();
            })
            $("#services_5").click(function () {
                $("#services_5").toggleClass("_border")
                $("#services_5_prices").toggle();
            })
            $("#check_zipcode_btn").click(function () {
                $.ajax({
                    type: "Post",
                    url: "@Url.Action("CheakAvailablityOfZipcode")",
                    data: { "zipcode": $("#input_zipcode").val()},
                    success: function (result) {
                        if (result == true) {
                            $("#Schedule").click();
                        }
                        else {
                            if (result == false) {
                                $("#forError").text("Enter Valid Pincode")
                            }
                            else {
                                $("#forError").text(result)
                            }
                        }
                    },
                    failure: function (result) {
                        alert("Failure")
                    },
                    error: function () {
                        alert("Somthing Went Wrong");
                    }
                })
            })

        })
    </script>
